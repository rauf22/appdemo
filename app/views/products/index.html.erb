<% unless current_user %>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% else %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>

<h1> Products </h1>

<% @products.each do |product| %>
	<h2><%= product.title %></h2>
	<p><%= product.description %></p>
	<p><%= product.price %></p>
<% end %>